# DocumentIulia.ro Production Environment Configuration
# Copy this file to .env.production and fill in the values
# IMPORTANT: Never commit .env.production to version control!

# =============================================================================
# DATABASE
# =============================================================================
# Use a production PostgreSQL instance (managed DB recommended)
DATABASE_URL="postgresql://USER:PASSWORD@HOST:5432/documentiulia?schema=public&sslmode=require"

# =============================================================================
# SERVER
# =============================================================================
PORT=3001
NODE_ENV=production

# =============================================================================
# APPLICATION URLs
# =============================================================================
APP_URL=https://documentiulia.ro
FRONTEND_URL=https://documentiulia.ro

# =============================================================================
# ANAF API - e-Factura & SPV
# =============================================================================
# Production ANAF API endpoint
ANAF_API_URL=https://api.anaf.ro

# Register your application at: https://www.anaf.ro/anaf/internet/ANAF/servicii_online/inreg_pers_juridice/
# Use production client credentials (NOT test credentials)
ANAF_CLIENT_ID=your_production_client_id
ANAF_CLIENT_SECRET=your_production_client_secret

# OAuth2 callback URL (must match ANAF portal registration)
ANAF_REDIRECT_URI=https://documentiulia.ro/api/v1/spv/oauth/callback

# =============================================================================
# SAGA v3.2 Integration
# =============================================================================
SAGA_API_URL=https://api.saga.ro
SAGA_API_KEY=your_saga_api_key

# =============================================================================
# GROK AI (for Romanian tax/accounting queries)
# =============================================================================
GROK_API_KEY=your_grok_api_key

# =============================================================================
# JWT Authentication
# =============================================================================
# IMPORTANT: Generate a secure random secret for production!
# Use: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=GENERATE_A_SECURE_64_BYTE_SECRET_FOR_PRODUCTION
JWT_EXPIRATION=7d

# =============================================================================
# REDIS (Optional - for caching and rate limiting)
# =============================================================================
# Use a managed Redis instance in production
REDIS_URL=redis://HOST:6379

# =============================================================================
# EMAIL Configuration (SMTP)
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=noreply@documentiulia.ro
SMTP_PASS=your_smtp_app_password
EMAIL_FROM=noreply@documentiulia.ro
EMAIL_FROM_NAME=DocumentIulia.ro

# =============================================================================
# LOGGING & MONITORING
# =============================================================================
LOG_LEVEL=info

# Optional: Sentry for error tracking
# SENTRY_DSN=https://your_sentry_dsn

# =============================================================================
# RATE LIMITING
# =============================================================================
# Requests per minute for API endpoints
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# =============================================================================
# CORS
# =============================================================================
# Comma-separated list of allowed origins
CORS_ORIGINS=https://documentiulia.ro,https://www.documentiulia.ro

# =============================================================================
# SECURITY
# =============================================================================
# Enable Helmet security headers
HELMET_ENABLED=true

# Cookie settings
COOKIE_SECURE=true
COOKIE_SAME_SITE=strict

{
    "name": "documentiulia/platform",
    "description": "Documentiulia - Romanian Business Platform for Education & Automation",
    "type": "project",
    "license": "proprietary",
    "require": {
        "php": ">=8.0",
        "stripe/stripe-php": "^13.0",
        "mpdf/mpdf": "^8.2",
        "sendgrid/sendgrid": "^8.0"
    },
    "autoload": {
        "psr-4": {
            "Documentiulia\\": "api/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}

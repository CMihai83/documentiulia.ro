{
    "name": "documentiulia/platform",
    "description": "Documentiulia - Romanian Business Platform for Education & Automation",
    "type": "project",
    "license": "proprietary",
    "require": {
        "php": ">=8.0",
        "dompdf/dompdf": "^3.1",
        "google/cloud-vision": "^2.1",
        "mpdf/mpdf": "^8.2",
        "phpmailer/phpmailer": "^7.0",
        "phpoffice/phpspreadsheet": "^5.3",
        "sendgrid/sendgrid": "^8.1",
        "stripe/stripe-php": "^19.0",
        "tecnickcom/tcpdf": "^6.10",
        "thiagoalessio/tesseract_ocr": "^2.13"
    },
    "autoload": {
        "psr-4": {
            "Documentiulia\\": "api/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    }
}
